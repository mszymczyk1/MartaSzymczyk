#include <iostream>

using namespace std;

int main()
{
    int podany_rok;
    cout << "Podaj rok:" << endl;
    cin >> podany_rok;
    int a = podany_rok % 4;
    int b = podany_rok % 100;
    int c = podany_rok % 400;
    if ( (a == 0) && (b != 0) && (c != 0))
    {
    cout << podany_rok << " r. jest przestępny!" << endl;
    }
    else
    {
        cout << podany_rok << " r. nie jest przestępny!" << endl;
    }
    return 0;
}
