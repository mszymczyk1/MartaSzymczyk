#include <iostream>
#include <string>
using namespace std;

class MyString : public string 
{
  public:
  MyString(const char* constr_string="abc"){
      cout << "My string constructor called" << endl;
  }
  
  ~MyString(){
      cout << "MyString destructor called" << endl;
  }
  
  friend ostream& operator>> (ostream& out, MyString& string )
    {
        out << string;
        
        return out;
    }
};

int main()
{
    
   MyString str1;
    
    return 0;
}
